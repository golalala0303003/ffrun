
.form-container {
  background: linear-gradient(135deg, #6a82fb, #fc5c7d);
  padding: 40px 20px;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.form-title {
  font-size: 60rpx;
  color: white;
  text-align: center;
  margin-bottom: 50rpx;
}


.input-container {
  width: 80%;
  margin-bottom: 20px;
}


.input-field {
  width: 100%;
  padding: 12px 15px;
  font-size: 16px;
  border: 2px solid #ffffff;
  border-radius: 25px;
  background-color: rgba(255, 255, 255, 0.2); /* 半透明背景 */
  color: white;
  outline: none;
}


.input-field:focus {
  border-color: #fc5c7d; /* 聚焦时边框颜色 */
}


.submit-button {
  width: 80%;
  padding: 15px 0;
  font-size: 18px;
  color: white;
  background-color: #fc5c7d;
  border-radius: 30px;
  text-align: center;
  border: none;
  cursor: pointer;
  margin-top: 20px;
}

.submit-button:hover {
  background-color: #f48cbb;
}
