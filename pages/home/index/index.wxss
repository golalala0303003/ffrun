/* pages/home/index/index.wxss */
.tpf-nav-bar-bg-color{position: absolute; left: 0; top: 0; right: 0; height: 260rpx; background-color:#ffcc13;}
.top_text{
  position: relative;
  z-index: 1;
  color: white;
}
.bannner{
  width: 750rpx;
  height: 375rpx;
}
.bannner image{
  width: 100%;
  height: 100%;
  transform: scale(92%);
  border-radius: 30rpx;
}

.bannner .active{
  transform: scale(1);
}

.container {
  display: flex; 
  flex-direction: row;
  flex-wrap:wrap;
  justify-content:space-between;
  margin:30rpx;        
  padding: 30rpx;               
}

.item { 

  text-align: center;    
  margin: 20rpx;  
  width: 155rpx;
  padding: 10rpx;
  box-shadow:0 0 5px 5px #F2F2F2F2;
  border-radius: 30rpx; 
  background: linear-gradient(135deg, #ffeb66 0%,#ffce0b 100%);
}

.item-image {
  width: 100rpx;              
  height: 100rpx; 
  
}

.item-text {
  display: block;
  margin-top: 5rpx;       
}

.test1{
  transform: scale(1.3); 
  position: absolute;
  bottom: 30rpx; 
  left: 50%; 
  transform: translateX(-50%) scale(1.3); 
}

.test_shadow{
  text-align:justify;
  position: absolute;
  background-color: cyan;
  left: 10rpx;
  box-shadow:  12rpx 10rpx 5rpx rgba(0, 0, 255, .2);
  border-radius: 30rpx; 
}




