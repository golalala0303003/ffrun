.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.title {
  font-size: 100rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}


.label {
  font-size: 60rpx;
  color: #555;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 60rpx;
  padding: 10rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  font-size: 50rpx;
  margin-bottom: 20rpx;
  background-color: #fafafa;
}

.input:focus {
  border-color: #007aff;
  outline: none;
  background-color: #fff;
}

.submit-btn {
  width: 100%;
  height: 70rpx;
  background-color: #007aff;
  color: white;
  font-size: 30rpx;
  border: none;
  border-radius: 6rpx;
  cursor: pointer;
}

.submit-btn:hover {
  background-color: #005bb5;
}

.submit-btn:active {
  background-color: #00488f;
}